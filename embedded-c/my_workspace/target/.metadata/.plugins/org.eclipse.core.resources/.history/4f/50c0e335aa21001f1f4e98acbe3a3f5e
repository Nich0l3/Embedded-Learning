#ifndef MAIN_H_
#define MAIN_H_

#include <stdint.h>
// Using struct and bitfield make a middleware/hardware abstraction to turn on the LED

typedef struct{
	//LSB
	uint32_t GPIOAEN		:1;
	uint32_t GPIOBEN		:1;
	uint32_t GPIOCEN		:1;
	uint32_t GPIODEN		:1;
	uint32_t GPIOEEN		:1;
	uint32_t GPIOFEN		:1;
	uint32_t GPIOGEN		:1;
	uint32_t GPIOHEN		:1;
	uint32_t GPIOIEN		:1;
	uint32_t RESERVED1		:3;
	uint32_t CRCEN			:1;
	uint32_t RESERVED2		:5;
	uint32_t BKPSRAMEN		:1;
	uint32_t RESERVED3		:1;
	uint32_t CCMDATARAMEN	:1;
	uint32_t DMA1EN			:1;
	uint32_t DMA2EN			:1;
	uint32_t RESERVED4		:2;
	uint32_t ETHMACEN		:1;
	uint32_t ETHMACTXEN		:1;
	uint32_t ETHMACRXEN		:1;
	uint32_t ETHMACPTPEN	:1;
	uint32_t OTGHSEN		:1;
	uint32_t OTGHSULPIEN	:1;
	uint32_t RESERVED5		:1;
	// MSB
}RCC_AHB1ENR_t;

typedef struct{
	uint32_t MODE0			:2;
	uint32_t MODE1			:2;
	uint32_t MODE2			:2;
	uint32_t MODE3			:2;
	uint32_t MODE4			:2;
	uint32_t MODE5			:2;
	uint32_t MODE6			:2;
	uint32_t MODE7			:2;
	uint32_t MODE8			:2;
	uint32_t MODE9			:2;
	uint32_t MODE10			:2;
	uint32_t MODE11			:2;
	uint32_t MODE12			:2;
	uint32_t MODE13			:2;
	uint32_t MODE14			:2;
	uint32_t MODE15			:2;
}GPIOx_MODE_REG_t;

#endif /* MAIN_H_ */
